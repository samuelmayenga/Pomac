@model POMACSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "REgistration PAGE";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>NHAMIS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition login-page"  style="align-items:center">

    <div class="login-box" >
        <div class="login-box">
            <div class="login-logo">
                @*<a href="@url.action("index", "home")"><b>nha</b>mis</a>*@
            </div>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body" style="position:absolute;">
            <img  src="~/Images/pomac logo.jpg"  style="margin-left:auto; margin-right:auto;width:30% ;display:block" />
            <div style="text-align: center;">
                <h2 style="color:darkgoldenrod"><strong>The Presidency </strong></h2>
                @*<h2 style="color:darkgoldenrod"><strong>Executive Office of the President </strong></h2>*@
                @*<span style="color:steelblue; font-size:24px; font-weight:800;">Cabinet Affairs Office</span>*@
                <p class="login-box-msg" style="color:darkgoldenrod; font-size:20px; font-weight:800;">POWER OF MERCY OFFICE</p>
                <p class="login-box-msg" style="font-weight:700;">Enter Your Login Credentials Below</p>
            </div>
            <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control col-md-12", placeholder = "User Name" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                      
                            @Html.TextBoxFor(m => m.OtherNames, new { @class = "form-control", placeholder = "Other Names" })
                    
                    </div>

                    <div class="form-group">
                       
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
                 
                    </div>

                    <div class="form-group">
                       
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                       
                    </div>
                    <div class="form-group">
                       
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        
                    </div>
                    <div class="form-group">
                   
                       
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        
                    </div>

                    <div class="form-group">

                        @Html.Label("user Role", new { @class = "col-md-2 control-label" })


                        @*@Html.DropDownList("Name")*@
                        @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " ", new { @class = "form-control", placeholder = "User Roles" })

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary" value="Register" />
                        </div>
                    </div>
                                                 


                    @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>
                    *@
                }
            </section>
            @*<p><a href="@Url.Action("Register", "Account")" class="text-center">Register as a new user</a></p>*@
            <hr />
            <footer>
                <p style="text-align:center">© @DateTime.Now.Year- POMAC</p>
            </footer>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/admin-lte/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
    @*RenderSection("scripts", required: false)*@
</body>
</html>